<% content_for :title do %>
  <i class="fa fa-desktop"></i> 
  Channels
<% end %>
<% content_for :subtitle, 'Overview' %>
<% content_for :breadcrumbs do %>
        <div class="row">
    <div class="col-md-10">
    <ol class="breadcrumb">
      <li class="active"><i class="fa fa-dashboard"></i> Dashboard</li>
    </ol>
    </div>
    <div class="col-md-2">
    <a href="<%= new_channel_path %>" class="btn btn-success btn-breadcrumb col-md-12 pull-right">
      <i class="fa fa-plus"></i>
      New Channel
    </a>
    </div>
    </div>
<% end %>

<div class="row">
    <% @channels.each do |channel| %>
      <div class="col-sm-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
              <i class="fa fa-desktop"></i>
              <%= channel.name %>
            </h3>
            
          </div>
          <div class="panel-body">

            <div class="panel panel-info">
              <div class="panel-heading clearfix">
                <h3 class="panel-title pull-left">
                  <i class="fa fa-code"></i>
                  Last XML Processing
                  <small>TestFile.xml</small>
                </h3>
                <span class="label label-danger pull-right">error</span>
              </div>
              <div class="panel-body">

                <div class="alert alert-danger">
                   <i class="fa fa-warning"></i>
                   <strong>Syntax Error :</strong>
                   Unexpected "&lt;" line 32
                </div>

                <div class="alert alert-warning">
                   <table class="table table-condensed no-margins">
                     <thead>
                       <tr>
                         <th>
                           <i class="fa fa-clock-o"></i>
                           12:31 
                           Time Gap
                         </th>
                         <th>Start time</th>
                         <th>End time</th>
                       </tr>
                     </thead>
                     <tbody>
                       <tr>
                         <td>
                           <strong>
                             <i class="fa fa-play-circle"></i>
                             <%= "TURBO".humanize %> 
                           </strong>
                         </td>
                         <td>
                           <span class="label label-success">
                             <i class="fa fa-play"></i>
                             15:12:34
                           </span>
                         </td>
                         <td>
                           <span class="label label-danger">
                             <i class="fa fa-stop"></i>
                             15:30:09
                           </span>
                         </td>
                       </tr>
                       <tr>
                         <td>
                           <strong>
                             <i class="fa fa-play-circle"></i>
                             <%= "REAL HOUSEWIFES".humanize %> 
                           </strong>
                         </td>
                         <td>
                           <span class="label label-success">
                             <i class="fa fa-play"></i>
                             15:12:34
                           </span>
                         </td>
                         <td>
                           <span class="label label-danger">
                             <i class="fa fa-stop"></i>
                               15:30:09
                           </span>
                         </td>
                       </tr>
                     </tbody>
                   </table>
                </div>

              </div>
            </div>


            <table class="table table-striped table-condensed">
              <tbody>
                <tr>
                  <th>Queue path</th>
                  <td><code class="ww"><%= channel.queue_path %></code></td>
                </tr>
                <tr>
                  <th>Success path</th>
                  <td><code class="ww"><%= channel.success_path %></code></td>
                </tr>
                <tr>
                  <th>Error path</th>
                  <td><code class="ww"><%= channel.error_path %></code></td>
                </tr>
            </table>

            <div class="row">
              <div class="col-md-4">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">
                      <i class="fa fa-upload"></i>
                      FTP Transfert
                    </h3>
                  </div>
                  <div class="panel-body">
                    <table class="table table-striped table-condensed no-margins">
                      <tbody>
                        <% ['ftp1.nrj.fr','ftp2.nrj.fr','ftp3.nrj.fr'].each do |ftp| %>
                          <tr>
                            <td>
                            <i class="fa fa-sitemap"></i>
                            <code class="ww">user</code>
                            @
                            <code class="ww"><%= ftp %></code>
                            :
                            <code class="ww">22</code>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>

                </div>
              </div>
              <div class="col-md-4">
                <div class="panel panel-success">
                  <div class="panel-heading">
                    <h3 class="panel-title">
                      <i class="fa fa-envelope"></i>
                      Proccessing Notification
                    </h3>
                  </div>
                  <div class="panel-body">
                    <table class="table table-striped table-condensed no-margins">
                      <tbody>
                        <% channel.users.each do |user| %>
                          <tr>
                            <td>
                              <i class="fa fa-<%= if user.role? :user then 'user' else 'envelope' end %>"></i>
                              <%= user.email %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>

                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="panel panel-danger">
                  <div class="panel-heading">
                    <h3 class="panel-title">
                      <i class="fa fa-envelope"></i>
                      Error Notification
                    </h3>
                  </div>
                  <div class="panel-body">
                    <table class="table table-striped table-condensed no-margins">
                      <tbody>
                        <% channel.contacts.each do |user| %>
                          <tr>
                            <td>
                              <i class="fa fa-<%= if user.role? :user then 'user' else 'envelope' end %>"></i>
                              <%= user.email %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>

                  </div>

                </div>
              </div>
            </div>
            <div class="caption">
              <p>
              <a href="<%= channel_path(channel) %>" class="btn btn-default" role="button">
                  <i class="fa fa-arrow-right"></i>
                  Show
                </a>
                <% if can? :edit, channel %>
                <a href="<%= edit_channel_path(channel) %>" class="btn btn-default" role="button">
                  <i class="fa fa-edit"></i>
                  Edit
                </a>
                <% end %>
                <% if can? :delete, channel %>
                <%= link_to channel, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                  <i class="fa fa-trash-o"></i>
                  Delete
                <% end %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>
