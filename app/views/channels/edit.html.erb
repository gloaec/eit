<% content_for :title do %>
  <i class="fa fa-desktop"></i> 
  <%= @channel.name %>
<% end %>

<% content_for :subtitle, t(:details) %>

<% content_for :breadcrumbs do %>
  <div class="row">
    <div class="col-xs-10">
      <ol class="breadcrumb">
        <li><i class="fa fa-th-list"></i> <%= t :channels %></li>
        <li class="active"><i class="fa fa-desktop"></i> <%= @channel.name %></li>
      </ol>
    </div>
    <div class="col-xs-2">
      <a href="#" onclick="$('#channel_form').submit()" class="btn btn-primary btn-breadcrumb col-md-12 pull-right <%= "disabled" unless can? :edit, @channel %>">
      <i class="fa fa-check"></i>
      <span class="hidden-xs"><%= t :update %></span>
    </a>
    </div>
    </div>
<% end %>

<%= render 'form' %>

<%= link_to 'Show', @channel %> |
<%= link_to 'Back', channels_path %>
